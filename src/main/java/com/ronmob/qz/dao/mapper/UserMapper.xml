<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ronmob.qz.dao.UserMapper">
    <resultMap id="UserMap" type="com.ronmob.qz.model.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="user_name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="wx_user_name" property="wx_user_name" jdbcType="VARCHAR"/>
        <result column="wx_open_id" property="wx_open_id" jdbcType="VARCHAR"/>
        <result column="is_agent" property="is_agent" jdbcType="INTEGER"/>
        <result column="agent_pay_order_id" property="agent_pay_order_id" jdbcType="INTEGER"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
        <result column="balance" property="balance" jdbcType="DECIMAL"/>
    </resultMap>

    <select id="getUserById" parameterType="java.lang.Integer"
            resultMap="UserMap">
		SELECT * FROM user WHERE id= #{id}
	</select>

    <!-- 获取用户列表 -->
    <select id="getUsers" resultMap="UserMap"
            parameterType="com.ronmob.qz.vo.UserListSearchVo">
        SELECT * FROM user WHERE 1=1
        <if test="user!=null and user.id != null">
            AND id = #{user.id}
        </if>
        <if test="user!=null and user.wx_open_id != null">
            AND user = #{user.wx_open_id}
        </if>
        <if test="user!=null and user.is_agent != null">
            AND is_agent = #{user.is_agent}
        </if>
        <if test="user!=null and user.password != null">
            AND password =#{user.password}
        </if>
        <if test="user!=null and user.mobile != null">
            AND mobile = #{user.mobile}
        </if>
        <if test="page != null">
            limit #{page.firstResult},#{page.everyPageCount};
        </if>
    </select>

    <!-- 获取用户列表数量 -->
    <select id="getUserCount" resultType="java.lang.Integer"
            parameterType="com.ronmob.qz.vo.UserListSearchVo">
        SELECT COUNT(*) FROM user WHERE 1=1
        <if test="user!=null and user.id != null">
            AND id = #{user.id}
        </if>
        <if test="user!=null and user.wx_open_id != null">
            AND user = #{user.wx_open_id}
        </if>
        <if test="user!=null and user.is_agent != null">
            AND is_agent = #{user.is_agent}
        </if>
        <if test="user!=null and user.password != null">
            AND password =#{user.password}
        </if>
        <if test="user!=null and user.mobile != null">
            AND mobile = #{user.mobile}
        </if>
    </select>

    <!-- 新增用户 -->
    <insert id="insertUser" parameterType="com.ronmob.qz.model.User" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        INSERT INTO "user"
        (user_name,password,mobile,wx_user_name,wx_open_id,is_agent,agent_pay_order_id,score,balance)
        VALUES
        (#{user_name},#{password},#{mobile},#{wx_user_name},#{wx_open_id},
        #{is_agent},#{agent_pay_order_id},#{score},#{balance})
    </insert>

    <!-- 更新用户 -->
    <update id="updateUser" parameterType="com.ronmob.qz.model.User">
        UPDATE "user"
        SET
        user_name=#{user_name},password=#{password},mobile=#{mobile},wx_user_name=#{wx_user_name},
        wx_open_id=#{wx_open_id},is_agent=#{is_agent},agent_pay_order_id=#{agent_pay_order_id},score=#{score},balance=#{balance}
        WHERE id=#{id}
    </update>

    <delete id="deleteUserById" parameterType="java.lang.Integer">
        DELETE FROM "user" WHERE id=#{id}
    </delete>
</mapper>